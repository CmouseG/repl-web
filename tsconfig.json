{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "baseUrl": "./app",
    "allowJs": true,
    "allowUnreachableCode": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "./node_modules/@types",
      "./app/typings"
    ],
    "sourceMap": true,
    "outDir": "./tsDist"
  },
  "include": [
    "./app/**/*"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "useCache": true
  }
}
